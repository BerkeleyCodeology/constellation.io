{
    "manifest_version": 2,

    "name": "Constellation.io",
    "description": "A rewards-based productivity app for students. Start studying!",
    "version": "0.0.3",

    "browser_action": {
        "default_icon": "icon192.png",
        "default_title": "Open the popup"
    },
    "permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "background": {
        "scripts": [ "background.js" ],
        "persistent": true
    },
    "content_security_policy": "script-src 'self' 'sha256-CMyYic0d7L0Q9AwjGU0n6buHFRR6bU3TOAe0P7DEJrk'"
}
